.stars-container {
  display: flex;
  flex-direction: row;
}
.stars-container .stars {
  display: flex;
  flex-direction: row;
  height: 17rpx;
  margin-right: 24rpx;
  margin-top: 6rpx;
}
.stars-container .stars image {
  padding-left: 3rpx;
  height: 17rpx;
  width: 17rpx;
}
.stars-container .stars .stars-score {
  color: #1f3463;
}
.movie-container {
  display: flex;
  flex-direction: column;
  padding: 0 22rpx;
  margin-bottom: 20rpx;
}
.movie-container .movie-img {
  width: 200rpx;
  height: 270rpx;
  padding-bottom: 20rpx;
}
.movie-container .movie-title {
  margin-bottom: 16rpx;
  font-size: 24rpx;
}
